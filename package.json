{
  "name": "travel-maps-backend",
  "version": "1.0.0",
  "description": "Backend API for Travel Maps with user authentication and sharing features",
  "main": "dist/app.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
